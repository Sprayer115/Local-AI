  #     - ollama-data:/root/.ollama
  #   # Add GPU support if needed
  #   # deploy:
  #   #   resources:
  #   #     reservations:
  #   #       devices:
  #   #         - driver: nvidia
  #   #           count: all
  #   #           capabilities: [gpu]

volumes:
  open-webui: {}
